<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DVSoftware" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RegularTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="MediumTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="BoldTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="FayucaFinderDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="cornerRadius">@dimen/corner_radius_8dp</item>
        <item name="windowMinWidthMajor">90%</item>
        <item name="windowMinWidthMinor">90%</item>
    </style>
</resources>